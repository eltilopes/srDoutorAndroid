<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/cor_navegacao_borda" />
                </shape>
            </item>
            <item android:top="0.5dp" android:bottom="0.5dp">
                <shape>
                    <solid android:color="@color/cor_navegacao_fundo_hover" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:color="@color/cor_navegacao_texto">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/cor_navegacao_borda" />
                </shape>
            </item>
            <item android:top="0.5dp" android:bottom="0.5dp">
                <shape>
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>