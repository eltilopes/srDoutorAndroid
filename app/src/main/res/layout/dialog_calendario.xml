<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/app_name"/>


    <EditText
        android:background="@drawable/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/editTextNomeMedico"
        android:hint="    Nome Médico"
        android:inputType="textPersonName"/>

    <EditText
        android:background="@drawable/layout_bg"
        android:layout_below="@id/editTextNomeMedico"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/editTextNomeClinica"
        android:hint="    Nome Clínica"
        android:inputType="textPersonName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/editTextNomeClinica">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:background="@color/cor_navegacao_fundo_hover"
            android:text="Cancel"/>

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:background="@color/colorPrimary"
            android:text="Agree"/>
    </LinearLayout>
</RelativeLayout>